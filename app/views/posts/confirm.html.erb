<h3 class="mt-5">Confirm this post</h3>

<%= form_with(model: @post, url: posts_path, local: true, method:'post') do |form| %>

  <div class="field">
      <p>Description: <%= @post.content %></p>
      <%= form.hidden_field :content, class: "form-control"%>
  </div>
  <div class="field">
      <div class="card-img-top" style="width: 50%;">
    <%= image_tag(@post.image.url) if @post.image && @post.image.url%>
    </div>
    <%= form.hidden_field :image_cache %>
    <%= form.submit "Post" %>
  <% end %>

  <%= form_with(model:@post, url:new_post_path, local:true, method:"get") do |form| %>
    <%= form.hidden_field :image_cache %>
    <%= form.submit "Return", name: "back" %>
  <% end %>

</div>
