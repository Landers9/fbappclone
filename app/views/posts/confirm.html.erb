


<div class="container" style="margin-top:120px;">
    <h3 class="mt-5 mb-5">Confirm this post</h3>

    <%= form_with(model: @post, url: posts_path, local: true, method:'post') do |form| %>
      <div class="card gedf-card">
          <div class="card-header">
              <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                  <li class="nav-item">
                      <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts" role="tab" aria-controls="posts" aria-selected="true">Make
                          a publication</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" id="images-tab" data-toggle="tab" role="tab" aria-controls="images" aria-selected="false" href="#images">Images</a>
                  </li>
              </ul>
          </div>
          <div class="card-body">
              <div class="tab-content" id="myTabContent">
                  <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                      <div class="form-group">
                          <p>Content: <%= @post.content %></p>
                          <%= form.hidden_field :content, class: "form-control"%>
                      </div>
                  </div>
                  <div class="tab-pane fade" id="images" role="tabpanel" aria-labelledby="images-tab">
                      <div class="form-group">
                          <div class="custom-file">
                              <% if @post.image && @post.image.url %>
                                <%= image_tag @post.image.url, class: 'img-fluid mb-5', style:"width:400px;" %>
                              <% end %>
                              <%= form.hidden_field :image_cache %>
                          </div>
                      </div>
                      <div class="py-4"></div>
                  </div>
              </div>
              <div class="btn-toolbar justify-content-between mt-5">
                  <div class="btn-group">
                      <%= form.submit "Confirm", class:"btn btn-primary"%>
                  </div>
                  <% end %>
                  <div class="btn-group">
                    <%= form_with(model:@post, url:new_post_path, local:true, method:"get") do |form| %>
                      <%= form.hidden_field :image_cache %>
                      <%= form.submit "Return", name: "back", class: "btn btn-danger" %>
                    <% end %>
                  </div>
              </div>
          </div>
      </div>
</div>
